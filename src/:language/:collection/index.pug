extends ../../layout

block content
	- const latest = latestWork(CurrentCollection.Works)
	- const technologies = [...new Set(CurrentCollection.Works.map(w => w.Metadata.MadeWith).filter(t => t!==null).flat().map(lookupTech).filter(t => t !== undefined).map(t => t.URLName))].map(lookupTech)


	h1= CurrentCollection.Title
	.intro!= CurrentCollection.Description

	if CurrentCollection.LearnMoreAt
		a.description__learn-more(href=CurrentCollection.LearnMoreAt)
			+icon("arrow-right")
			i18n Learn more


	section#technologies
		ul.technologies-list.logos-only
			each tech in technologies
				li: a(href=`/using/${tech.URLName}` title=`${tech.Author}${tech.Author ? " "  : ""}${tech.DisplayName}`)
					img(
						alt=translate(`%sâ€™s logo`, tech.DisplayName)
						src=asset(`logos/${tech.URLName}.svg`)
					)

	section#latest
		h2(i18n) most recent one

		+work-card(latest, "display")

	section#all
		h2(i18n) all

		+gallery(CurrentCollection.Works)
