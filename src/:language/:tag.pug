extends ../layout

block append head
	+title(translate(CurrentTag.Plural))

block content
	h1(i18n)= CurrentTag.Plural

	if CurrentTag.Description
		p.description(i18n)= CurrentTag.Description
		if CurrentTag.LearnMoreURL
			a.description__learn-more(href=CurrentTag.LearnMoreURL)
				+icon("arrow-right")
				i18n Learn more

	+gallery((withTag(all_works, CurrentTag)), classes=`tag-${CurrentTag.URLName}`)
