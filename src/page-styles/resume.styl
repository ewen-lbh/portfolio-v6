@media print
	footer, nav
		display none

main
	section
		display flex
		flex-direction column
		margin 0 auto
		max-width 1000px

	> section
		width 100%

	h2, h3
		margin 0
		text-align left

	h3
		margin-bottom 1rem
		font-weight bold
		font-size 1.7em

		&:not(:first-of-type)
			margin-top 2rem

	h3 > p.inline
		display inline-block
		margin-left 1rem
		font-weight normal
		font-size 1rem

	h4
		margin 0
		font-weight bold
		font-size 1.3rem

		.author
			opacity 0.75

	dl
		display inline-grid
		grid-template-columns 3rem auto
		gap 0.5em

	dt, dd
		display flex
		align-items center

	dt
		font-weight bold
		opacity 0.5

	dd
		margin-right 1rem
		margin-left 0.25rem
		font-size 1.5em

@media (min-width 800px)
	.skills-list
		display grid
		grid-template-columns 1fr 1fr

@media (max-width 450px)
	.skills-list
		padding-left 0

.skill
	display flex
	align-items center
	list-style none

	// width unquote("min(300px, calc(100vw - 10px))")
	@media (max-width 450px)
		flex-direction column

	gap 0.5rem

	&:not(:last-child)
		margin-bottom 1.5rem

	.logo
		width 2.5em
		object-fit contain
		object-position center

	.count
		font-weight bold

	span.date
		display inline-block
		margin-left 0.5em
		font-size 0.6em
		opacity 0.5

.ranking
	span.fraction-slash
		margin 0 0.25rem
		opacity 0.75

	sup
		margin-bottom 0.75em
		font-size 0.75em

section.education, section.experience
	h4
		margin-top 2rem
		margin-bottom 0.25rem

	> section
		flex-direction row
		align-items start
		margin-bottom 3rem
		padding 2rem 0
		width 100%

	header.timespan
		font-size 2.75rem
		transform rotate(180deg)
		writing-mode vertical-rl

	.results
		grid-template-columns 8rem auto

		@media (max-width 450px)
			grid-template-columns 1fr

	.where
		display flex
		justify-content center
		align-self center
		align-items center
		align-content center
		height 300px
		background-position center
		background-size 150%
		text-decoration none
		font-weight 900
		font-size 2rem
		transition all 0.25s ease
		backdrop-filter opacity(0.5)

		&:hover
			background-size 200%
			font-weight normal
			font-size 3rem

	.learn-more
		display flex
		padding-left 0
		gap 2em

		li
			padding-left 0
			list-style none

		a
			shape-link()
