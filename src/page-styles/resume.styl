@media print
	footer, nav
		display none

section
	display flex
	flex-direction column
	margin 0 auto

section.skills
	max-width calc(3 * (300px + 30px + 2 * 2rem))

h2, h3
	margin 0
	text-align left

h3
	margin-bottom 1rem
	font-weight bold
	font-size 1.7em

	&:not(:first-of-type)
		margin-top 2rem

.cards-grid
	display flex
	flex-wrap wrap
	justify-content start
	align-items start
	gap 30px

.resume-card
	width 300px
	// width unquote("min(300px, calc(100vw - 10px))")
	break-inside avoid
	page-break-inside avoid
	-webkit-column-break-inside avoid

	@media print
		width 260px

	position relative
	display flex
	align-self center
	align-items center
	padding 1.5rem 2rem
	height 120px
	border-radius 5px
	background #f3f3f3
	gap 1rem

	.text
		text-align left

	.logo
		width 80px
		height 80px
		object-fit contain

	.text p
		margin 0

	.text .count
		font-weight bold

	.description
		overflow hidden
		max-height 2em
		width calc(400px - 80px - 0.5rem - 1rem)
		text-overflow ellipsis
		white-space nowrap

	h4
		font-weight bold
		font-size 1.5rem

		.author
			opacity 0.75

	.button-link
		position absolute
		right 1rem
		bottom 1rem
		text-align right

		@media print
			display none

	dl
		display flex
		flex-wrap wrap
		align-items center

	dt, dd
		display inline-block
		display flex
		align-items center

	dt
		font-weight bold
		opacity 0.5

	dd
		margin-right 1rem
		margin-left 0.25rem
		font-size 1.5em

	span.date
		display inline-block
		margin-left 0.5em
		font-size 0.6em
		opacity 0.5

	span.fraction-slash
		margin 0 0.25rem
		opacity 0.75
