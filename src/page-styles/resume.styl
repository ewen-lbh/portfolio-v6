@media print
	footer, nav
		display none

section
	display flex
	flex-direction column
	margin 0 auto

section.skills
	max-width 1000px

h2, h3
	margin 0
	text-align left

h3
	margin-bottom 1rem
	font-weight bold
	font-size 1.7em

	&:not(:first-of-type)
		margin-top 2rem

@media (min-width 800px)
	.skills-list
		columns 2

.skill
	display flex
	align-items center
	// width unquote("min(300px, calc(100vw - 10px))")
	break-inside avoid
	page-break-inside avoid
	-webkit-column-break-inside avoid
	gap 0.5rem

	&:not(:last-child)
		margin-bottom 1.5rem

	.logo
		width 2.5em
		object-fit contain
		object-position center

	.count
		font-weight bold

	h4
		margin 0
		font-weight bold
		font-size 1.1rem

		.author
			opacity 0.75

	dl
		display inline-grid
		grid-template-columns 3rem auto
		gap 0.5em

	dt, dd
		display flex
		align-items center

	dt
		font-weight bold
		opacity 0.5

	dd
		margin-right 1rem
		margin-left 0.25rem
		font-size 1.5em

	span.date
		display inline-block
		margin-left 0.5em
		font-size 0.6em
		opacity 0.5

	span.fraction-slash
		margin 0 0.25rem
		opacity 0.75
