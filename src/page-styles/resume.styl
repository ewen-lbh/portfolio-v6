@media print
    footer, nav
        display none

section
	display flex
	flex-direction column
	margin 0 auto

section.skills
	max-width calc(3 * (300px + 30px + 2 * 2rem))

h2, h3
	text-align left
	margin 0

h3
	font-weight bold
	font-size 1.7em
	margin-bottom 1rem
	&:not(:first-of-type)
		margin-top 2rem

.cards-grid
	display flex
	flex-wrap wrap
	justify-content start
	align-items start
	gap 30px

.resume-card
	// width unquote("min(300px, calc(100vw - 10px))")
	break-inside avoid
	page-break-inside avoid
	-webkit-column-break-inside avoid
	width 300px
	@media print
		width 260px
	height 120px
	padding 1.5rem 2rem
	gap 1rem
	align-self center
	background #f3f3f3
	border-radius 5px
	display flex
	position relative
	align-items center

	.text
		text-align left

	.logo
		width 80px
		height 80px
		object-fit contain

	.text p
		margin 0

	.text .count
		font-weight bold

	.description
		max-height 2em
		width calc(400px - 80px - 0.5rem - 1rem)
		text-overflow ellipsis
		overflow hidden
		white-space nowrap

	h4
		font-size 1.5rem
		font-weight bold

		.author
			opacity 0.75

	.button-link
		position absolute
		right 1rem
		bottom 1rem
		text-align right

		@media print
			display none

	dl
		display flex
		flex-wrap wrap
		align-items center
	dt, dd
		display inline-block
		display flex
		align-items center

	dt
		font-weight bold
		opacity 0.5

	dd
		margin-left 0.25rem
		font-size 1.5em
		margin-right 1rem

	span.date
		display inline-block
		margin-left 0.5em
		font-size 0.6em
		opacity 0.5

	span.fraction-slash
		opacity 0.75
		margin 0 0.25rem
