{
	"name": "ewen-lbh-portfolio",
	"description": "Ewen Le Bihan",
	"private": true,
	"license": "CC-BY-NC-ND-4.0",
	"version": "0.1.0",
	"scripts": {
		"configure:dev": "cp hydrator/dev.env .env",
		"configure:prod": "cp hydrator/prod.env .env",

		"database:build": "ortfodb ~/projects build --scattered --minified database/database.json --config database/.portfoliodb.yaml",
		"pug:build": "ortfomk",
		"livescript:build": "lsc -c --output assets/ src/*.ls",
		"stylus:build": "stylus --compress --sourcemap src/style.styl -o assets/style.css",
		"assets:build": "cp -r assets/* dist/ && svgo --recursive --quiet -f assets/ -o dist/",
		"build": "pnpm database:build && concurrently npm:pug:build npm:livescript:build npm:stylus:build npm:assets:build",

		"pug:watch": "ortfomk watch",
		"livescript:watch": "lsc   --watch -c --output assets/ src/*.ls",
		"stylus:watch": "stylus    --watch --compress --sourcemap src/style.styl -o assets/style.css",
		"assets:watch": "nodemon   --watch assets        --exec 'pnpm assets:build'",
		"watch": "concurrently npm:pug:watch npm:livescript:watch npm:assets:watch npm:stylus:watch",
		"dev": "pnpm configure:dev && nodemon --watch hydrator --ext go --exec 'pnpm hydrator:build && pnpm pug:build && pnpm watch'",

		"pages:upload": "concurrently 'rsync -r --progress dist/en/  ubuntu@ewen.works:/home/user-data/www/en.ewen.works/' 'rsync -r --progress dist/fr/  ubuntu@ewen.works:/home/user-data/www/fr.ewen.works/'",
		"assets:upload": "rsync -r --progress assets/ ubuntu@ewen.works:/home/user-data/www/assets.ewen.works/",
		"media:upload": "rsync -r --progress media/ ubuntu@ewen.works:/home/user-data/www/media.ewen.works/",
		"upload": "concurrently npm:pages:upload npm:assets:upload npm:media:upload",

		"database:clean": "rm -r media",
		"clean": "pnpm database:clean && rm -r dist",

		"make:prod": "pnpm configure:prod && pnpm build && pnpm upload"
	},
	"devDependencies": {
		"concurrently": "^5.3.0",
		"gettext-extractor": "^3.5.3",
		"livescript": "^1.6.0",
		"nodemon": "^2.0.7",
		"pug-cli": "^1.0.0-alpha6",
		"stylus": "^0.54.8",
		"svgo": "^2.3.0"
	}
}
